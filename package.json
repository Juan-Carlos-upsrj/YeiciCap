
{
  "name": "yeicicap-hub",
  "version": "2.0.0",
  "description": "Professional Motion Capture Bridge for OptiTrack Motive",
  "author": "YeiciCap Team",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dist:backend": "py -m PyInstaller --onefile --name hub_core backend/main.py",
    "dist:ui": "electron-builder build --win --publish never",
    "dist": "npm run build && npm run dist:backend && npm run dist:ui"
  },
  "build": {
    "appId": "com.yeicicap.hub",
    "productName": "YeiciCap Hub",
    "directories": {
      "output": "dist/installers",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "portable"
    }
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "lucide-react": "^0.562.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.0",
    "vite": "^5.4.1"
  }
}
